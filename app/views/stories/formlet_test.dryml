<edit-page>
  <content:>
    <form>
      <error-messages/>      
      <field-list fields="title, body, due, status">
        <status-view:>
          <input part="status-view"/>
        </status-view:>
      </field-list>
      <formlet:status id="formlet1" update="status-view, self" message="please wait..." spinner-next-to="status-formlet-submit" part="status-formlet" before="confirm('really?');" confirm="really?" >
        <hidden-id-field/>
        <field-list fields="name"/>
        <formlet-submit id="status-formlet-submit"/>
      </formlet>
      <submit value="Edit Story" />
    </form>
  </content:>
</edit-page>