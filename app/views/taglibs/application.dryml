<!-- Define your application-wide tags here -->

<include src="rapid" plugin="hobo"/>

<set-theme name="clean"/>

<def tag="app-name">Agility</def>


<def tag="card" for="Task">
  <base-card merge>
    <creation-details: replace/>
    <before-edit-link:>
      <delete-button label="Done"/>
    </before-edit-link:>
    <after-content:>
      <div class="users">
        Assigned to: <repeat:users join=", "><a><You/></a></repeat>
      </div>
    </after-content:>
  </base-card>
</def>
